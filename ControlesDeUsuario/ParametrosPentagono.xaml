<UserControl x:Class="ControlesDeUsuario.ParametrosPentagono"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlesDeUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="0,-2,0,0" TextWrapping="Wrap" Text="Perimetro:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPerimetro" HorizontalAlignment="Left" Height="23" Margin="0,20,0,0" TextWrapping="Wrap" Text="1.0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="135,-2,0,0" TextWrapping="Wrap" Text="Apotema:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtApotema" HorizontalAlignment="Left" Height="23" Margin="135,20,0,0" TextWrapping="Wrap" Text="1.0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
